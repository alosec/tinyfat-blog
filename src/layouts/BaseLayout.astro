---
interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | TinyFat</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  <script is:inline>
    // Apply saved theme immediately to prevent flash
    (function() {
      const saved = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      if (saved === 'dark' || (!saved && prefersDark)) {
        document.documentElement.classList.add('dark');
      }
    })();
  </script>
</head>
<body>
  <button class="theme-toggle" id="theme-toggle">dark</button>

  <h1><a href="https://tinyfat.com" class="site-title">TINY FAT AGENTS</a></h1>

  <p class="nav">
    <a href="https://tinyfat.com#about">About</a> ✧
    <a href="https://tinyfat.com#how">How it works</a> ✶
    <a href="https://tinyfat.com#pricing">Pricing</a> ✻
    <a href="https://docs.tinyfat.com">Docs</a> ✧
    <strong>Blog</strong> ✶
    <a href="https://tinyfat.com/login">Sign in</a>
  </p>

  <slot />

  <p style="text-align: center; font-size: 3rem; margin: 1em 0;">✽</p>

  <p class="footer-links">
    <a href="https://tinyfat.com/legal/terms">Terms</a> ·
    <a href="https://tinyfat.com/legal/privacy">Privacy</a> ·
    <a href="https://tinyfat.com/legal/acceptable-use">Acceptable Use</a> ·
    <a href="https://tinyfat.com/contact">Contact</a>
  </p>

  <p>Built by <a href="https://alexgarcia.blog">Alex Garcia</a></p>

  <script is:inline>
    // Theme toggle functionality
    function initThemeToggle() {
      const btn = document.getElementById('theme-toggle');
      if (!btn) return;

      // Update button text based on current state
      btn.textContent = document.documentElement.classList.contains('dark') ? 'light' : 'dark';

      btn.addEventListener('click', function() {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        btn.textContent = isDark ? 'light' : 'dark';
      });
    }

    // Scroll-aware toggle visibility
    function initScrollBehavior() {
      const btn = document.getElementById('theme-toggle');
      if (!btn) return;

      let lastScroll = 0;
      const threshold = 50;

      window.addEventListener('scroll', function() {
        const currentScroll = window.scrollY;

        if (currentScroll <= threshold) {
          btn.classList.remove('hidden');
        } else if (currentScroll > lastScroll) {
          btn.classList.add('hidden');
        }

        lastScroll = currentScroll;
      }, { passive: true });
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() {
        initThemeToggle();
        initScrollBehavior();
      });
    } else {
      initThemeToggle();
      initScrollBehavior();
    }
  </script>
</body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
