---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  date: string;
  investorOnly?: boolean;
}

const { title, date, investorOnly } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title}>
  <h2>
    {title}
    {investorOnly && <span class="investor-badge">Investor Update</span>}
  </h2>

  <p class="post-meta">
    <time datetime={date}>{formattedDate}</time>
  </p>

  <article>
    <slot />
  </article>

  <p style="text-align: center; font-size: 3rem; margin: 2em 0;">âœ§</p>

  <p><a href="/">&larr; All posts</a></p>
</BaseLayout>
